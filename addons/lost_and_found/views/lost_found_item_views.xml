<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lost_found_item_form" model="ir.ui.view">
        <field name="name">lost.found.item.form</field>
        <field name="model">lost.found.item</field>
        <field name="arch" type="xml">
            <form>
                <header><field name="state" widget="statusbar"/></header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="item_type"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lost_found_item_tree" model="ir.ui.view">
        <field name="name">lost.found.item.tree</field>
        <field name="model">lost.found.item</field>
        <field name="arch" type="xml">
            <tree decoration-danger="item_type == 'lost'" decoration-success="item_type == 'found'">
                <field name="name"/>
                <field name="item_type"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_lost_found_item" model="ir.actions.act_window">
        <field name="name">Tous les objets</field>
        <field name="res_model">lost.found.item</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_lost_and_found_root" name="Objets Perdus &amp; TrouvÃ©s" sequence="10"/>
    <menuitem id="menu_all_items" name="Liste des Objets" parent="menu_lost_and_found_root" action="action_lost_found_item" sequence="10"/>
</odoo>
